<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="title">LOGIN APP</h1>
        </div>
        <div class="col-lg-12 form-group">
          <label for="">Xin chào</label>
          <%= link_to current_user.name, user_path(current_user) %>
        </div>
        <div class="col-lg-12 form-group">
          <label for="">Danh sách Users</label>
          <table class="table">
            <thead>
              <th>ID</th>
              <th>User Name</th>
            </thead>
            <tbody>
              <%= render @users %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
